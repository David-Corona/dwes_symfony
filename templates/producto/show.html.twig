    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ producto.titulo }}</td>
            </tr>
            <tr>
                <th>Subtitulo</th>
