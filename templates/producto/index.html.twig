{% extends 'layout.html.twig' %}

{% block title %}Producto index{% endblock %}

{% block principal %}
    <h1>Producto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Subtitulo</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Imagen</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.titulo }}</td>
                <td>{{ producto.subtitulo }}</td>
                <td>{{ producto.descripcion }}</td>
                <td>{{ producto.precio }}</td>
                <td><img width="120" src="{{ asset('/uploads/imgs/' ~ producto.imagen ) }}" alt="{{ producto.imagen }}"></td>
                <td>
                    <a href="{{ path('producto_show', {'id': producto.id}) }}">Mostrar</a>
                    <a href="{{ path('producto_edit', {'id': producto.id}) }}">Editar</a>
                    <a href="{{ path('producto_delete_json', {'id': producto.id}) }}" class="delete">Eliminar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No hay productos a listar.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('producto_new') }}">Crear</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/delete.js') }}"></script>
{% endblock %}
